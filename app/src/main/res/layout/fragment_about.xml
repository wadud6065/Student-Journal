                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: info@studentjournalbd.com"
                    android:layout_marginLeft="7dp"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    />

